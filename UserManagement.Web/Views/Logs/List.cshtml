@model UserManagement.Web.Models.Logs.UserLogEntryViewModel

<h2>Logs</h2>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>User Id</th>
				<th>Action</th>
				<th>Time Stamp</th>
				<th style="width: 1px;"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@item.Id
					</td>
					<td>
						<a asp-controller="Users" asp-action="ViewUser" asp-route-id="@item.UserId"> @item.UserId</a>
					</td>
					<td>
						@item.Action
					</td>
					<td>
						@item.TimeStamp.ToLocalTime()
					</td>
					<td>
						<a asp-controller="Logs" asp-action="ViewLog" asp-route-id="@item.Id" class="dropdown-item">View</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<nav>
		<ul class="pagination">
			@if (Model.CurrentPage > 1)
			{
				<li class="page-item">
					<a class="page-link" asp-action="List" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
				</li>
			}

			@for (int i = 1; i <= Model.TotalPages; i++)
			{
				<li class="page-item @(i == Model.CurrentPage ? "active" : "")">
					<a class="page-link" asp-action="List" asp-route-page="@i">@i</a>
				</li>
			}

			@if (Model.CurrentPage < Model.TotalPages)
			{
				<li class="page-item">
					<a class="page-link" asp-action="List" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
				</li>
			}
		</ul>
	</nav>

</div>

